@model IEnumerable<ERManager.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">User List</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Users", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="@Url.Action("Delete", "Users", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="@Url.Action("Create", "Users")" class="btn btn-primary">Add New User</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
