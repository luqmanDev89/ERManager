@model IEnumerable<ERManager.Models.ContactPayment>

@{
    ViewData["Title"] = "Contact Payments";
}
 <div class="container-fluid">

                        <!-- Page title box -->
                        <div class="page-title-box">
                            <ol class="breadcrumb float-right">
                                <li class="breadcrumb-item"><a href="javascript:void(0);">Greeva</a></li>
                                <li class="breadcrumb-item"><a href="javascript:void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">لیستی پارەدان و پارەوەرگرتن</li>
                            </ol>
                            <h4 class="page-title">لیست</h4>
                        </div>
                        <!-- End page title box -->

                        <div class="row font-16 ">
                            <div class="col-12">
                                <div class="card-box">
                                   <form method="get" id="filterForm">
                                        <div class="row">
                                            <!-- Contact Name Filter -->
                                            <div class="col-md-2">
                                                <label for="Contacts">حساب</label>
                                                <select id="ContactId" name="ContactId" class="form-control select2">
                                                    <option value="">هەموو</option>
                                                    @foreach (var Contact in ViewBag.Contacts)
                                                    {
                                                         <option  value="@Contact.Id" selected="@(ViewBag.ContactId == Contact.Id ? "selected" : null)">
                                                             @Contact.Name
                                                          </option>
                                                    }
                                                </select>
                                            </div>
                                             <!-- Treasury Name Filter -->
                                            <div class="col-md-2">
                                                <label for="Treasuries">قاسە</label>
                                                <select id="TreasuryId" name="TreasuryId" class=" form-control select2">
                                                    <option value="">هەموو</option>
                                                    @foreach (var Treasury in ViewBag.Treasuries)
                                                    {
                                                         <option  value="@Treasury.TreasuryId" selected="@(ViewBag.TreasuryId == Treasury.TreasuryId ? "selected" : null)">
                                                             @Treasury.Name
                                                          </option>
                                                    }
                                                </select>
                                            </div>
                                             <!-- Treasury Name Filter -->
                                            <div class="col-md-2">
                                                <label for="PaymentType">جۆر</label>
                                                <select id="PaymentType" name="PaymentType" class=" form-control select2">
                                                    <option value="">هەموو</option>
                                                    <option  value="Inflow" selected="@(ViewBag.PaymentType == "Inflow" ? "selected" : null)">Inflow </option>
                                                    <option  value="Outflow" selected="@(ViewBag.PaymentType == "Outflow" ? "selected" : null)">Outflow </option>
                                                </select>
                                            </div>

                                            <!-- Date Range Filter -->
                                            <div class="col-md-2">
                                                <label for="startDate">لە بەرواری</label>
                                                <input type="date" id="startDate" value="@ViewBag.startDate?.ToString("yyyy-MM-dd")" name="startDate" class="form-control" />
                                            </div>
                                            <div class="col-md-2">
                                                <label for="endDate">بۆ بەرواری</label>
                                                <input type="date" id="endDate" value="@ViewBag.endDate?.ToString("yyyy-MM-dd")" name="endDate" class="form-control" />
                                            </div>

                                            <!-- Notes Text Search -->
                                            <div class="col-md-1">
                                                <label for="Notes">گەڕان</label>
                                                <input type="text" id="Notes" name="Notes" value="@ViewBag.Notes" placeholder="گەڕان لە تێبینی" class="form-control" />
                                            </div>

                                            <!-- Filter Button -->
                                            <div class="col-md-1">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="btn btn-primary form-control">گەڕان</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="card-box">

                                    <div class="table-rep-plugin">
                                        <div class="table-responsive" >
                                            <table id="tech-companies-1" class="table  table-bordered  table-striped">
                                                <thead class="thead-light">
                                                <tr>
                                                    <th >کۆد</th>
                                                    <th data-priority="3">جۆر</th>
                                                    <th data-priority="3">بەڕێز</th>
                                                    <th data-priority="3">موبایل</th>
                                                    <th data-priority="1">بڕ</th>
                                                    <th data-priority="1">قاسە</th>
                                                    <th data-priority="3">تێبینی</th>
                                                    <th data-priority="6">دروستکردن</th>
                                                    <th data-priority="6">نوێکردنەوە</th>
                                                    <th data-priority="6">بەکارهێنەر</th>
                                                    <th data-priority="6">Actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                                  <tr>
                                                                    <th>@item.Id</th>
                                                                    <td>@item.PaymentType</td>
                                                                    <td> <a asp-action="ContactBalance" asp-controller="Contacts" asp-route-startDate="@DateTime.Now.Date.ToString("yyyy-MM-dd")" asp-route-endDate="@DateTime.Now.Date.AddMonths(1).ToString("yyyy-MM-dd")" asp-route-contactId="@item.Contact?.Id">@item.Contact?.Name</a></td>
                                                                    <td><a href="tel:@item.Contact?.Phone">@item.Contact?.Phone</a></td>
                                                                    <td>@item.Amount.ToString("N0")</td>
                                                                    <td>@item.Treasury?.Name</td>
                                                                    <td>@item.Notes</td>
                                                                    <td>@item.CreatedAt</td>
                                                                    <td>@item.UpdateAt</td>
                                                                    <td>@item.User?.UserName</td>
                                                                    <td>
                                                                         <div class="btn-group" role="group">
                                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">نوێکردنەوە</a>
                                                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                                                                           <button type="submit" class="btn btn-danger btn-sm" >سڕینەوە</button>
                                                                         </form>
                                                                    </div>
                                                                    </td>
                                                                  </tr>
                                                            }

                                                </tbody>
                                            </table>
                                        </div> <!-- end table-responsive-->

                                    </div> <!-- table-rep-plugin-->
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="card-box"><sp>کۆی هاتوو  :</sp>    @ViewBag.totalInflow.ToString("N0")</div>

                                        </div>
                                         <div class="col-3">
                                            <div class="card-box"><sp>کۆی دەڕچوو  :</sp>    @ViewBag.totalOutflow.ToString("N0")</div>

                                        </div>
                                    </div>
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->


                    </div> <!-- end container-fluid-->

@section Scripts {

    <!-- Responsive table -->
    <script src="~/assets/libs/RWD-Table-Patterns/js/rwd-table.min.js" asp-append-version="true"></script>


                   <script>
                    function confirmDelete() {
                        return confirm("ئایا دڵنیایت لە سڕینەوەی ئەم  مەسروفە؟");
                    }
                   </script>

}