@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<!-- HOME -->
<section>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="wrapper-page">
                    <div class="account-pages">
                        <div class="account-box border rounded shadow-lg p-4 bg-light">

                            <!-- Logo box -->
                            <div class="account-logo-box mb-4">
                                <h2 class="text-center">
                                    <a href="@Url.Action("Index", "Home")" class="text-success">
                                        <img src="~/assets/images/LuqmanTechLogo.png" alt="Logo" height="28">
                                    </a>
                                </h2>
                            </div>

                            <!-- Error Content -->
                            <div class="account-content text-center">
                                <h1 class="text-error display-3 text-danger fw-bold"><i class="mdi mdi-alert-circle-outline"></i> 500</h1>
                                <h4 class="text-uppercase text-danger mt-3">Internal Server Error</h4>

                                <!-- Dynamic Error Message -->
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <p class="alert alert-danger mt-3">
                                        @TempData["ErrorMessage"]
                                    </p>
                                }

                                <p class="text-muted mt-3">
                                    We’re sorry, something went wrong. Please try refreshing the page or contact
                                    <a href="mailto:luqmanamen@gmail.com" class="text-muted"><strong>Support</strong></a>.
                                </p>

                                <!-- Return Home Button -->
                                <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">
                                    <i class="mdi mdi-home mr-1"></i> Return Home
                                </a>

                                <!-- Optional Request ID -->
                                @if (Model.ShowRequestId)
                                {
                                    <div class="mt-4 text-muted">
                                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                    </div>
                                }
                            </div> <!-- end account-content -->

                        </div> <!-- end account-box -->
                    </div> <!-- end account-pages -->
                </div> <!-- end wrapper-page -->

            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container -->
</section>
<!-- END HOME -->
