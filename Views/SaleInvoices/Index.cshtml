@model IEnumerable<ERManager.Models.SaleInvoice>
@{
    ViewData["Title"] = "Invoice Sales";
}

<div class="container-fluid">
    <!-- Page title box -->
    <div class="page-title-box">
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Greeva</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Tables</a></li>
            <li class="breadcrumb-item active">لیستی پسوولەکان</li>
        </ol>
        <h4 class="page-title">لیستی پسوولەکانی کڕین</h4>
    </div>
    <!-- End page title box -->
    <div class="row font-16 justify-content-start">
        <!-- Card 1 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 255, 255);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی پسوولە</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.SaleInvoiceItems.Sum(d => d.LineTotal)).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی سعی</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.Tax ?? 0).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی کڕێی شۆفێر</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.DriverTax ?? 0).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

            <!-- Card 3 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی کڕێی کرێکار</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.EmployeTax ?? 0).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

            <!-- Card 3 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی  مەسروف</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.Expenses ?? 0).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی  داشکان</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.Discount ?? 0).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-auto mb-2">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 245, 220);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title font-weight-bold mb-1">کۆی  گشتی</h5>
                        <p class="card-text text-dark text-warning font-weight-bold mb-1" style="font-size: 1.25rem;">
                            @Model.Sum(d => d.InvoiceTotal).ToString("N0")
                        </p>
                        <p class="text-sm text-muted">Update Now</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Repeat similar structure for other cards -->
    </div>




    <!-- Filter Form -->
    <div class="row font-13 mb-4">
        <div class="col-12">
            <div class="card-box">
                <form method="get" id="filterForm">
                    <div class="row">
                        <!-- Contact Name Filter -->
                        <div class="col-md-2">
                            <label for="ContactId">بازرگان</label>
                            <select id="ContactId" name="ContactId" class="form-control select2">
                                <option value="">هەموو</option>
                                @foreach (var contact in ViewBag.Contacts)
                                {
                                    <option value="@contact.Id">@contact.Name</option>
                                }
                            </select>
                        </div>

                        <!-- Date Range Filters -->
                        <div class="col-md-2">
                            <label for="StartDate">لە بەرواری</label>
                            <input type="date" id="StartDate" name="startDate" value="@ViewBag.startDate?.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="EndDate">بۆ بەرواری</label>
                            <input type="date" id="EndDate" name="endDate" value="@ViewBag.endDate?.ToString("yyyy-MM-dd")" class="form-control" />
                        </div>

                        <!-- Notes Text Search -->
                        <div class="col-md-2">
                            <label for="Notes">گەڕان</label>
                            <input type="text" id="Notes" name="Notes" value="@ViewBag.Notes" placeholder="گەڕان لە تێبینی" class="form-control" />
                        </div>
                        <!-- Payment Status Filters -->
                        <div class="col-md-2 col-sm-6">

                            <br />
                            <div class="custom-control custom-checkbox d-inline-block mr-3">
                                <input type="checkbox" class="custom-control-input" id="IsPaid" name="IsPaid" value="true" @(ViewBag.IsPaid != null && ViewBag.IsPaid == true ? "checked" : "") />
                                <label class="custom-control-label" for="IsPaid">واسڵکراو</label>
                            </div>
                            <div class="custom-control custom-checkbox d-inline-block">
                                <input type="checkbox" class="custom-control-input" id="IsNotPaid" name="IsNotPaid" value="true" @(ViewBag.IsNotPaid != null && ViewBag.IsNotPaid == true ? "checked" : "") />
                                <label class="custom-control-label" for="IsNotPaid">واسڵنەکراو</label>
                            </div>
                        </div>

                        <!-- Filter Button -->
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary form-control">گەڕان</button>
                        </div>

                        <!-- Create New Button -->
                        <div class="col-md-1 d-flex align-items-end">
                            <a asp-action="Create" class="btn btn-danger form-control">نوێ</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Purchase Invoice Table -->
        <div class="col-12">
            <div class="card-box">
                <h4 class="header-title">مەسروفات</h4> <!-- Optional: Header for the table -->
                <div class="table-rep-plugin">
                    <div class="table-responsive">
                        <table id="tech-companies-1" class="table table-bordered table-striped">
                            <thead class="thead-light">
                                <tr>
                                    <th>کۆد</th>
                                    <th>بازرگان</th>
                                    <th>کۆی پسوولە</th>
                                    <th>سعی</th>
                                    <th>کڕێی شۆفێر</th>
                                    <th>کڕێی کرێکار</th>
                                    <th>مەسروف</th>
                                    <th>داشکان</th>
                                    <th>کۆی گشتی</th>
                                    <th>کۆدی پارەدان</th>
                                    <th>تێبینی</th>
                                    <th>لق</th>
                                    <th>دروستکردن</th>
                                    <th>نوێکردنەوە</th>
                                    <th>بەکارهێنەر</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model)
                                {
                                    <tr>
                                        <td>@invoice.Id</td>
                                        <td>
                                            <a asp-action="ContactBalance"
                                               asp-controller="Contacts"
                                               asp-route-startDate="@DateTime.Now.Date.ToString("yyyy-MM-dd")"
                                               asp-route-endDate="@DateTime.Now.Date.AddMonths(1).ToString("yyyy-MM-dd")"
                                               asp-route-contactId="@invoice.Contact?.Id">
                                                @invoice.Contact?.Name<br />
                                                <span class="text-muted">@invoice.Contact?.Phone</span>
                                            </a>
                                        </td>

                                        <td>@invoice.InvoiceItemsTotal.ToString("N0")</td>
                                        <td>@invoice.Tax</td>
                                        <td>@invoice.DriverTax</td>
                                        <td>@invoice.EmployeTax</td>
                                        <td>@invoice.Expenses</td>
                                        <td>@invoice.Discount</td>
                                        
                                        <td>
                                               @invoice.InvoiceTotal.ToString("N0")
                                        </td>
                                        <td><a href="@Url.Action("Edit", "ContactPayments", new { id = invoice.ContactPaymentId })">@invoice.ContactPaymentId</a> </td>
                                        <td>@invoice.Notes</td>
                                        <td>@invoice.Branch?.Name</td>
                                        <td>@invoice.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                        <td>@invoice.UpdateAt?.ToString("yyyy-MM-dd")</td>
                                        <td>@invoice.User?.UserName</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "SaleInvoices", new { id = invoice.Id })" class="btn btn-warning btn-sm">دەستکاری</a>
                                            <form asp-action="Delete" asp-route-id="@invoice.Id" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                                                <button type="submit" class="btn btn-danger btn-sm">سڕینەوە</button>
                                            </form>
                                            <button class="btn btn-warning btn-sm @(invoice.ContactPaymentId.HasValue ? "hidebutton" : "")"
                                                    data-id="@invoice.Id"
                                                    data-contactid="@invoice.ContactId"
                                                    onclick="markAsPaid(this)">
                                                پارەوەرگرتن
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Script -->
    @section Scripts {
        <script>
            function markAsPaid(button) {
                var invoiceId = $(button).data("id"); // Get the invoice ID from the button

                // Confirm the action (optional)
                if (confirm("ئایە دڵنیات لە وەرگرتنی پارەی  ئەم پسوولەیە")) {
                    // Create the ContactPayment on the server via an AJAX call
                    $.ajax({
                        type: "POST",
                        url: "/SaleInvoices/Pay", // Define your action URL
                        data: {
                           SaleInvoiceId: invoiceId
                        },
                        success: function (response) {
                            if (response.success) {
                                alert("پارەوەرگرتنەکە سەرکەتوو بوو");
                                // Refresh the page to show updated data
                                location.reload();
                            } else {
                                alert("هەڵەیەك ڕوویدا لە کاتی پارەوەرگرتن");
                            }
                        },
                        error: function () {
                            alert("هەڵەیەك ڕوویدا.");
                        }
                    });
                }
            }

            function confirmDelete() {
                return confirm("ئایا دڵنیایت لە سڕینەوەی ئەم مەسروفە؟");
            }
        </script>
    }
</div>