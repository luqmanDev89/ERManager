@model IEnumerable<ERManager.ViewModels.Sales.GroupedSaleInvoiceItemsViewModel>

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">

    <!-- Page title box -->
    <div class="page-title-box">
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Greeva</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Tables</a></li>
            <li class="breadcrumb-item active">فڕۆشتنی نوێ</li>
        </ol>
        <h4 class="page-title">فڕۆشتنی نوێ</h4>
    </div>
    <!-- End page title box -->

    <div class="row font-16">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">لیستی پسوولەکان</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>فڕۆشیار</th>
                                <th>کاڵا</th>
                                <th>دانە</th>
                                <th>نرخ</th>
                                <th>حاڵەت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model)
                            {
                                <tr>
                                    <td>@group.Contact?.Name</td>
                                    <td colspan="2" class="text-center"><strong>کاڵاکان:</strong></td> <!-- Spacer -->
                                    <td colspan="2" class="text-center">
                                        <a asp-action="CreatePurchaseInvoice" asp-controller="SaleInvoices" asp-route-SaleInvoiceId="@group.SaleInvoiceId" asp-route-ContactId="@group.ContactId" class="btn btn-danger">زیادکردن</a>
                                    </td> <!-- Spacer -->
                                </tr>
                                @foreach (var item in group.Items)
                                {
                                    <tr>
                                        <td></td> <!-- Spacer -->
                                        <td>@item.Product?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("N0")</td> <!-- Format as currency -->
                                        <td>
                                            <i class="fas @(item.IsAddedToPurchase ? "fa-check text-success" : "fa-times text-danger")"></i>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- end row -->

</div> <!-- end container-fluid -->