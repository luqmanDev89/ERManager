@model ERManager.ViewModels.Expenses.ExpensesViewModel

@{
    ViewData["Title"] = "Create Expense";
}


<div class="container-fluid">

    <!-- Page title box -->
    <div class="page-title-box">
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Greeva</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Back to List</a></li>
            <li class="breadcrumb-item active">Create Expense</li>
        </ol>
        <h4 class="page-title">Create Expense</h4>
    </div>
    <!-- End page title box -->


    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card-box">
                <h4 class="header-title m-t-0">Create Expense</h4>
                <p class="text-muted font-14 m-b-20">
                    Please fill in the details of the expense
                </p>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label font-16">تێبینی</label>
                        <input asp-for="Description" class="form-control form-control-lg"
                            placeholder="Enter a brief description of the expense" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Amount -->
                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="control-label font-16">بڕ</label>
                        <input asp-for="Amount" class="form-control form-control-lg" placeholder="Enter the amount spent" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <!-- Created At -->
                    <div class="form-group mb-3">
                        <label asp-for="CreatedAt" class="control-label font-16">بەروار</label>
                        <input asp-for="CreatedAt" class="form-control form-control-lg" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>

                    <!-- Treasury Dropdown -->
                    <div class="form-group mb-3">
                        <label asp-for="TreasuryId" class="control-label font-16">قاسە</label>
                        <select asp-for="TreasuryId" class="form-control form-control-lg select2"
                            asp-items="ViewBag.TreasuryId"></select>
                        <span asp-validation-for="TreasuryId" class="text-danger"></span>
                    </div>

                    <!-- Category Dropdown -->
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="control-label font-16">جۆر</label>
                        <select asp-for="CategoryId" class="form-control form-control-lg select2"
                            asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mt-4">
                        <input type="submit" value="Create Expense" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div> <!-- end card-box -->
        </div> <!-- end col -->


    </div>
    <!-- end row -->

</div> <!-- end container-fluid-->

@section Scripts {

}