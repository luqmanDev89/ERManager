@model ERManager.ViewModels.Expenses.ExpensesViewModel

@{
    ViewData["Title"] = "Create Expense";
}

<!-- Select2 -->
<link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="../../plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">



    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Expense Add</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Expense Add</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>



    <!-- Main content -->
    <section class="content">
        <div class="row">
        <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">تێبینی</label>
                            <input asp-for="Description" class="form-control"
                                placeholder="Enter a brief description of the expense" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Amount -->
                        <div class="form-group mb-3">
                            <label asp-for="Amount" class="control-label">بڕ</label>
                            <input asp-for="Amount" class="form-control" placeholder="Enter the amount spent" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <!-- Created At -->
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="control-label">بەروار</label>
                            <input asp-for="CreatedAt" class="form-control" type="date"
                                value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <!-- Treasury Dropdown -->
                        <div class="form-group mb-3">
                            <label asp-for="TreasuryId" class="control-label">قاسە</label>
                            <select asp-for="TreasuryId" class="form-control select2"
                                asp-items="ViewBag.TreasuryId"></select>
                            <span asp-validation-for="TreasuryId" class="text-danger"></span>
                        </div>

                        <!-- Category Dropdown -->
                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="control-label">جۆر</label>
                            <select asp-for="CategoryId" class="form-control select2"
                                asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <form asp-action="Create" class="form p-4">

        <div class="row">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Create new Expense" class="btn btn-success  float-right">
            </div>
        </div>
        </form>

    </section>
    <!-- /.content -->


@section Scripts {

    <!-- Select2 -->
    <link rel="stylesheet" href="../../plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="../../plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Select2 -->
    <script src="../../plugins/select2/js/select2.full.min.js"></script>

    <!-- Initialize Select2 -->
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap4',
                width: '100%'
            });
        });
    </script>
}
