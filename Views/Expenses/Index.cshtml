@model IEnumerable<ERManager.Models.Expenses>


<div class="container-fluid">

    <!-- Page title box -->
    <div class="page-title-box">
        <ol class="breadcrumb float-right">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Greeva</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0);">Tables</a></li>
            <li class="breadcrumb-item active">مەسروف</li>
        </ol>
        <h4 class="page-title">مەسروف</h4>
    </div>
    <!-- End page title box -->

    <div class="row font-16">
        <div class="col-md-6 mb-4">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(255, 255, 255);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title display-6 font-weight-bold mb-1">کۆی مەسروف</h5>
                        <p class="card-text text-dark text-warning font-weight-bold display-5 mb-1">@Model.Sum(d=>d.Amount).ToString("N0")</p>
                        <p class="text-sm text-muted">کۆ</p>
                    </div>
                    <i class="mdi mdi-chart-areaspline" style="font-size: 2rem; color: #007bff;"></i>
                </div>
            </div> <!-- end card-box-->
        </div>


        <div class="col-md-6 mb-4">
            <div class="card border-secondary shadow-sm" style="background-color: rgb(220, 220, 255);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="text-left">
                        <h5 class="card-title display-6 font-weight-bold mb-1">ژمارەی مەسروفەکان</h5>
                        <p class="card-text text-dark text-warning font-weight-bold display-5 mb-1">@Model.Count().ToString("N0")</p>
                        <p class="text-sm text-muted">-</p>
                    </div>
                    <i class="fas fa-file-invoice" style="font-size: 2rem; color: #007bff;"></i>
                </div>
            </div> <!-- end card-box-->
        </div>
    </div>


    <div class="row font-16 ">
        <div class="col-12">
            <div class="card-box">
                <form method="get" id="filterForm">
                    <div class="row">
                        <!-- Category Name Filter -->
                        <div class="col-md-2">
                            <label for="CategoryName">جۆر</label>
                            <select id="CategoryId" name="CategoryId" class="form-control select2">
                                <option value="">هەموو</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id" selected="@(ViewBag.CategoryId == category.Id? "selected" : null)">
                                        @category.Name
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Treasury Name Filter -->
                        <div class="col-md-2">
                            <label for="Treasuries">قاسە</label>
                            <select id="TreasuryId" name="TreasuryId" class=" form-control select2">
                                <option value="">هەموو</option>
                                @foreach (var Treasury in ViewBag.Treasuries)
                                {
                                    <option value="@Treasury.TreasuryId" selected="@(ViewBag.TreasuryId == Treasury.TreasuryId ? "selected" : null)">
                                        @Treasury.Name
                                    </option>
                                }
                            </select>
                        </div>



                        <!-- Date Range Filter -->
                        <div class="col-md-2">
                            <label for="startDate">لە بەرواری</label>
                            <input type="date" id="startDate" value="@ViewBag.startDate?.ToString("yyyy-MM-dd")" name="startDate" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="endDate">بۆ بەرواری</label>
                            <input type="date" id="endDate" value="@ViewBag.endDate?.ToString("yyyy-MM-dd")" name="endDate" class="form-control" />
                        </div>

                        <!-- Notes Text Search -->
                        <div class="col-md-2">
                            <label for="Notes">گەڕان</label>
                            <input type="text" id="Notes" name="Notes" value="@ViewBag.Notes" placeholder="گەڕان لە تێبینی" class="form-control" />
                        </div>

                        <!-- Filter Button -->
                        <div class="col-md-1">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary form-control">گەڕان</button>
                        </div>

                        <!-- Filter Button -->
                        <div class="col-md-1">
                            <label>&nbsp;</label>
                            <a asp-action="Create" class="btn btn-primary form-control">زیادکردن</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-12">
            <div class="card-box">
                <div class="card-box">

                    <div class="table-rep-plugin">
                        <div class="table-responsive">
                            <table id="tech-companies-1" class="table  table-bordered  table-striped">
                                <thead class="thead-light">
                                    <tr>
                                        <th>کۆد</th>
                                        <th data-priority="3">جۆر</th>
                                        <th data-priority="1">بڕ</th>
                                        <th data-priority="1">قاسە</th>
                                        <th data-priority="3">تێبینی</th>
                                        <th data-priority="3">لق</th>
                                        <th data-priority="6">دروستکردن</th>
                                        <th data-priority="6">نوێکردنەوە</th>
                                        <th data-priority="6">بەکارهێنەر</th>
                                        <th data-priority="6">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Category?.Name</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Treasury?.Name</td>
                                            <td>@item.Notes</td>
                                            <td>@item.Branch?.Name</td>
                                            <td>@item.CreatedAt</td>
                                            <td>@item.UpdateAt</td>
                                            <td>@item.User?.UserName</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">نوێکردنەوە</a>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                                                        <button type="submit" class="btn btn-danger btn-sm">سڕینەوە</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div> <!-- end table-responsive-->

                    </div> <!-- table-rep-plugin-->
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box"><sp>کۆی گشتی  :</sp>    @ViewBag.totalAmount</div>

                        </div>
                    </div>
                </div> <!-- end card-box -->
            </div> <!-- end card-box -->
        </div> <!-- end col -->
    </div>




</div> <!-- end container-fluid-->
@section Scripts {

    <!-- Responsive table -->
    <script src="~/assets/libs/RWD-Table-Patterns/js/rwd-table.min.js" asp-append-version="true"></script>

    <script>
        function confirmDelete() {
            return confirm("ئایا دڵنیایت لە سڕینەوەی ئەم  مەسروفە؟");
        }
    </script>

}

